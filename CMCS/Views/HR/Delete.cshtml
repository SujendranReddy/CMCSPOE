@model CMCS.Models.UserCreateEditViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete User";
}

<style>
    .page-wrapper {
        font-family: 'Segoe UI', Arial, sans-serif;
        padding: 30px;
        background: #F5F5F5;
        min-height: 100vh;
    }

    .card {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.06);
    }

    .btn-danger {
        background: #C0392B;
        color: #fff;
        padding: 10px 16px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-secondary {
        background: #6C757D;
        color: #fff;
        padding: 10px 16px;
        border-radius: 8px;
        border: none;
        text-decoration: none;
        cursor: pointer;
    }
</style>

<div class="page-wrapper">
    <div class="card">
        <h2 style="margin-top:0; color:#2C3E50;">Delete User</h2>

        <p>Are you sure you want to delete this user?</p>

        <div class="mb-3"><strong>First Name:</strong> @Model.FirstName</div>
        <div class="mb-3"><strong>Last Name:</strong> @Model.LastName</div>
        <div class="mb-3"><strong>Email:</strong> @Model.Email</div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div style="display:flex; gap:10px; margin-top:12px;">
                <button type="submit" class="btn-danger">Delete</button>
                <a asp-action="Index" class="btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
