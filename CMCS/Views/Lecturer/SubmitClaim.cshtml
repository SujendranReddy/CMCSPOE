@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div style="font-family: 'Segoe UI', Helvetica, Arial, sans-serif; padding:30px; background-color:#F5F5F5; min-height:100vh;">
    <!-- Breadcrumb navigation -->
    <nav style="margin-bottom:20px; font-size:14px; color:#555;">
        <a href="/Lecturer/Dashboard" style="color:#D67F2B; text-decoration:none; transition:color 0.3s;"
           onmouseover="this.style.color='#B76A1F'" onmouseout="this.style.color='#D67F2B'">Dashboard</a>
        <span style="margin: 0 5px;">/</span>
        <span style="color:#2C3E50;">Submit Claim</span>
    </nav>

    <h2 style="color:#2C3E50; margin-bottom:20px; font-size:32px; font-weight:600;">
        Submit a New Claim
    </h2>

    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data"
          style="max-width:500px; background-color:white; padding:20px; border-radius:12px;">

        <div style="margin-bottom:15px;">
            <label style="font-weight:bold; color:#2C3E50;">Your Name</label>
            <input asp-for="SubmittedBy" type="text" required
                   style="width:100%; padding:10px; margin-top:5px; border-radius:6px; border:1px solid #ccc;" />
            <span asp-validation-for="SubmittedBy" class="text-danger"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label style="font-weight:bold; color:#2C3E50;">Claim Month</label>
            <input asp-for="Month" type="month" required
                   style="width:100%; padding:10px; margin-top:5px; border-radius:6px; border:1px solid #ccc;" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label style="font-weight:bold; color:#2C3E50;">Hours Worked</label>
            <input asp-for="HoursWorked" type="number" min="1" required
                   style="width:100%; padding:10px; margin-top:5px; border-radius:6px; border:1px solid #ccc;" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label style="font-weight:bold; color:#2C3E50;">Hourly Rate</label>
            <input asp-for="HourlyRate" type="number" min="1" required
                   style="width:100%; padding:10px; margin-top:5px; border-radius:6px; border:1px solid #ccc;" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>
        </div>

        <div style="margin-bottom:15px;">
            <label style="font-weight:bold; color:#2C3E50;">Supporting Documents</label>
            <input name="uploadedFiles" type="file" multiple style="width:100%; padding:5px; margin-top:5px;" />
        </div>

        <button type="submit"
                style="padding:10px 20px; background-color:#D67F2B; color:white; border:none; border-radius:6px; cursor:pointer; transition:background-color 0.3s;"
                onmouseover="this.style.backgroundColor='#B76A1F'" onmouseout="this.style.backgroundColor='#D67F2B'">
            Submit Claim
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
