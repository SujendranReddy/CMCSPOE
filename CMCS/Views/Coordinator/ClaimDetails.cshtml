@{
    ViewData["Title"] = "Claim Details"; var claim = ViewBag.Claim;
}

<div style="font-family: arial, sans-serif; padding:30px; background-color:#f5f5f5; min-height:100vh;">
    <h2 style="color:#2c3e50; margin-bottom:20px;">Claim Details</h2>

    <div style="max-width:500px; background-color:white; padding:20px; border-radius:12px;">
        <p><strong>Claim ID:</strong> @claim.ClaimID</p>
        <p><strong>Claim Month:</strong> @claim.Month</p>
        <p><strong>Hours Worked:</strong> @claim.HoursWorked</p>
        <p><strong>Hourly Rate:</strong>R @claim.HourlyRate</p>
        <p><strong>Total Amount:</strong>R @claim.TotalAmount</p>
        <p>
            <strong>Status:</strong>
            <span style="color:@(claim.Status == "Approved" ? "#4caf50" : claim.Status == "Rejected" ? "#c0392b" : "#d67f2b"); font-weight:bold;">
                @claim.Status
            </span>
            <!-- since each role based interface is diiferent i made a habit of using custome inline styles/set the effects and styles in the html, it might be unusual but works fine -->
        </p>
        <p><strong>Submitted On:</strong> @claim.SubmittedOn</p>
        <p><strong>Submitted By:</strong> @claim.SubmittedBy</p>
        <p><strong>Approved By:</strong> @claim.ApprovedBy</p>

        <div>
            <strong>Supporting Documents:</strong>
            <ul>
                @foreach (var doc in claim.Documents)
                {
                    <li>@doc</li>
                }
            </ul>
        </div>

        <a href="/coordinator/dashboard"
           style="display:inline-block; margin-top:15px; padding:10px 20px; background-color:#d67f2b; color:white; text-decoration:none; border-radius:6px; transition:background-color 0.3s;"
           onmouseover="this.style.backgroundColor='#b76a1f'" onmouseout="this.style.backgroundColor='#d67f2b'">
            Back To Dashboard
            <!-- hover effect -->
        </a>
    </div>
</div>
